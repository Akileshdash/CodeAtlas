{
  "name": "code-atlas",
  "displayName": "CodeAtlas",
  "description": "Visualizer",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "CodeAtlas.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "CodeAtlas.getGitLog",
        "title": "Get Git Log"
      },
      {
        "command": "CodeAtlas.visualizeGit",
        "title": "Visualize Git"
      },
      {
        "command": "CodeAtlas.getIssues",
        "title": "Git Issues"
      },
      {
        "command": "CodeAtlas.getEnhancedInsights",
        "title": "Get Enhanced Insights"
      },
      {
        "command": "CodeAtlas.hotspotAnalysis",
        "title": "Hotspot Analysis"
      },
      {
        "command": "CodeAtlas.showGitBlame",
        "title": "Line Analysis"
      }
    ],
    "keybindings": [
      {
        "command": "CodeAtlas.helloWorld",
        "key": "ctrl+shift+h",
        "when": "editorTextFocus"
      },
      {
        "command": "CodeAtlas.getGitLog",
        "key": "ctrl+shift+g",
        "when": "editorTextFocus"
      },
      {
        "command": "CodeAtlas.visualizeGit",
        "key": "ctrl+shift+v",
        "when": "editorTextFocus"
      },
      {
        "command": "CodeAtlas.getIssues",
        "key": "ctrl+shift+s",
        "when": "editorTextFocus"
      },
      {
        "command": "CodeAtlas.getEnhancedInsights",
        "key": "ctrl+shift+e",
        "when": "editorTextFocus"
      },
      {
        "command": "CodeAtlas.hotspotAnalysis",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "simple-git": "^3.27.0"
  }
}
